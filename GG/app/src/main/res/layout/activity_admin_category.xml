<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">
    
    <TextView
        android:id="@+id/slogan_category"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/slogan_category"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="wrap_content"
            android:src="@drawable/tshirts"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="wrap_content"
            android:src="@drawable/sports"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="wrap_content"
            android:src="@drawable/female_dresses"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/sweathers"
            android:layout_width="wrap_content"
            android:src="@drawable/sweather"
            android:layout_height="wrap_content" />

    </LinearLayout>












    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="80dp"
            android:src="@drawable/glasses"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="90dp"
            android:src="@drawable/purses_bags"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="80dp"
            android:src="@drawable/hats"
            android:layout_height="80dp" />


        <ImageView
            android:id="@+id/shoes"
            android:layout_width="70dp"
            android:src="@drawable/shoess"
            android:layout_marginStart="16dp"
            android:layout_height="80dp" />



    </LinearLayout>






    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="80dp"
            android:src="@drawable/headphoness"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/laptop_pc"
            android:layout_width="90dp"
            android:src="@drawable/laptops"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="80dp"
            android:src="@drawable/watches"
            android:layout_height="80dp" />


        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="70dp"
            android:src="@drawable/mobiles"
            android:layout_marginStart="16dp"
            android:layout_height="80dp" />
    </LinearLayout>



    <Button
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:text="Maintain Products"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/maintain_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp" />




    <Button
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:text="Check New Orders"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/check_orders_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp" />




    <Button
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:text="Logout"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
         android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="42dp" />



</RelativeLayout>